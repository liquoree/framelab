modules/
├── canvas/                  # сам холст для рисования
│   ├── components/
│   │   └── CanvasBoard.tsx   # главный компонент канваса
│   ├── hooks/
│   │   └── useCanvas.ts      # логика рисования (кисть, ластик и т.п.)
│   ├── utils/
│   │   └── drawUtils.ts      # вспомогательные функции (рисование линий и т.д.)
│   ├── types.ts
│   └── index.ts

├── tools/                   # панель инструментов справа
│   ├── components/
│   │   ├── ToolsPanel.tsx    # панель целиком
│   │   ├── ToolButton.tsx    # кнопка инструмента (кисть/ластик)
│   │   ├── ColorPicker.tsx   # выбор цвета
│   │   └── BrushSize.tsx     # слайдер размера кисти
│   ├── hooks/
│   │   └── useTools.ts       # состояние текущего инструмента
│   └── index.ts

├── frames/                  # таймлайн кадров снизу
│   ├── components/
│   │   ├── FrameTimeline.tsx # список кадров
│   │   └── FrameItem.tsx     # отдельная миниатюра кадра
│   ├── hooks/
│   │   └── useFrames.ts      # управление кадрами (добавить, удалить и т.д.)
│   ├── utils/
│   │   └── frameUtils.ts     # копирование, очистка и т.п.
│   ├── types.ts
│   └── index.ts

├── player/                  # проигрыватель анимации
│   ├── components/
│   │   └── Player.tsx        # управление воспроизведением
│   ├── hooks/
│   │   └── usePlayer.ts      # логика проигрывания кадров
│   ├── types.ts
│   └── index.ts

├── exporter/                # экспорт анимации (GIF/WebM)
│   ├── components/
│   │   └── ExportDialog.tsx  # окно экспорта с настройками
│   ├── hooks/
│   │   └── useExporter.ts    # логика экспорта
│   ├── utils/
│   │   └── gifEncoder.ts     # обертка для gif.js
│   └── index.ts

└── storage/                 # сохранение и загрузка проектов
    ├── hooks/
    │   └── useStorage.ts     # сохранение в IndexedDB
    ├── utils/
    │   └── db.ts             # обертка над IndexedDB
    └── index.ts
